<h1>Editing Book</h1>
<%= form_for(@book, url:"/todolists/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class="action">
     <%= f.submit 'Update Book' %>
    </div>
    <%= link_to "Show", todolist_path(@book.id) %>
    |
    <%= link_to "Back", back_todolist_path(@book.id) %>
<% end %>
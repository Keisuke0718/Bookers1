<h1>Books</h1>
   <table>
   	<thead>
   		<tr>
   			<th>Title</th>
   			<th>Body</th>
   			<th colspan="3"></th>
   		</tr>
   	</thead>
    <tbody>
    	<% @books.each do |book| %>
    	 <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", todolist_path(book.id) %></td>
          <td><%= link_to "Edit", edit_todolist_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_todolist_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
         </tr>
        <% end %>
    </tbody>
   </table>

<h2>New Book</h2>
   <%= form_for(@book, url: '/todolists') do |f| %>

	<h4>title</h4>
    <%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>

    <div class="action">
     <%= f.submit 'Create Book' %>
    </div>
   <% end %>